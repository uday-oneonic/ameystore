<div class="featured-product-check">
  <div class="featured-product-check-image">
    {% if icon != blank %}
      <img src="{{ icon | img_url: 'master' }}" alt="Featured Icon">
    {% endif %}
  </div>
  <div class="featured-product-check-content">
    <h2>{{ title }}</h2>
    <p>{{ subtitle }}</p>
    {% if link_url %}
      <a href="{{ link_url }}">{{ link_text }}</a>
    {% endif %}
  </div>
</div>

<style>
  .featured-product-check {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .featured-product-check-image img {
    width: 40px;
    height: auto;
  }

  .featured-product-check-content h2 {
    font-size: 16px;
    margin: 0;
  }

  .featured-product-check-content p {
    font-size: 14px;
    color: #555;
  }

  .featured-product-check-content a {
    font-size: 14px;
    color: #0073e6;
    text-decoration: underline;
  }
</style>
