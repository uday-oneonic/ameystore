      </div>

      <!-- Start: Cart Drawer Collection Section -->

      <div class="cart-drawer__recommendations grid slider slide">
        <h3 class="cart-drawer__heading">Goes great with</h3>
        <div class="cart-drawer__collection grid grid slider slide">
          {% assign collection_handle = 'shop-best-sellers' %}
          {% assign recommended_collection = collections[collection_handle] %}

          {% if recommended_collection.products.size > 0 %}
            {% for product in recommended_collection.products limit: 4 %}
              <div class="grid__item cart-drawer-grid-item grid slider slide">
                <a href="{{ product.url }}" class="cart-drawer__product-link">
                  <img
                    src="{{ product.featured_image | image_url: width: 200 }}"
                    alt="{{ product.title }}"
                    loading="lazy"
                  >
                  <p class="cart-drawer__product-title">{{ product.title }}</p>
                  <p class="cart-drawer__product-price">
                    {{ product.price | money }}
                  </p>
                </a>
              </div>
            {% endfor %}
          {% else %}
            <p>No recommendations available.</p>
          {% endif %}
        </div>
      </div>

      <!-- End: Cart Drawer Collection Section -->

      <div class="drawer__footer">
        <!-- cart-drawer intruction option hide -->
        <!-- that code i remove -->
        <!-- this check-box code add gift in cart-drawer page -->

        <div class="gift-wrap-checkbox" style="padding: 1rem 0;">
          <label>
            <input type="checkbox" id="gift-wrap-checkbox">
            Add gift wrapping {{ linklists['gift-wrapping'].links.first.object.price | money }}
          </label>
        </div>

        <div class="cart-drawer-buttons">
          <button id="gift-code-btn" type="button">
            <span><img src="https://cdn.shopify.com/s/files/1/0597/5192/3755/files/gift-code.png?v=1744016766"></span>
            Apply Gift Code
          </button>
          <button id="order-note-btn" type="button">
            <span><img src="https://cdn.shopify.com/s/files/1/0597/5192/3755/files/order_note.png?v=1744016766"></span>
            Order Note
          </button>
          <button id="shipping-btn" type="button">
            <span
              ><img src="https://cdn.shopify.com/s/files/1/0597/5192/3755/files/Calculate_Shipping.png?v=1744016766"
            ></span>
            Calculate Shipping
          </button>
        </div>

        <!-- Sections to show/hide -->
        <!-- Gift Code Section -->
        <div id="gift-code-section" class="drawer-input-section" style="display: none;">
          <label for="gift_code">Enter Gift Code</label>
          <input
            type="text"
            id="gift_code"
            name="attributes[gift_code]"
            value="{{ cart.attributes.gift_code }}"
            form="cart"
          >
        </div>

        <!-- Order Note Section -->
        <div class="drawer-input-section" id="order-note-section" style="display: none;">
          <label for="order_note">Order Note</label>
          <textarea
            id="order_note"
            name="note"
            placeholder="Enter any notes about your order here"
            class="text-area field__input"
            rows="4"
          ></textarea>
        </div>

        <div id="shipping-section" class="drawer-input-section" style="display: none;">
          <p>View our <a href="/policies/shipping-policy" target="_blank">Shipping Policy</a> for rate details.</p>
        </div>

        <div class="cart-drawer__footer" {{ block.shopify_attributes }}>
          <div>
            {%- if cart.cart_level_discount_applications.size > 0 -%}
              <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                {%- for discount in cart.cart_level_discount_applications -%}
                  <li class="discounts__discount discounts__discount--end">
                    {{- 'icon-discount.svg' | inline_asset_content -}}
                    {{ discount.title | escape }}
                    (-{{ discount.total_allocated_amount | money }})
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>

          <div class="totals" role="status">
            <h2 class="totals__total sub-totals">{{ 'sections.cart.estimated_total' | t }}</h2>
            <p class="totals__total-value cart-drawer-totals-price">{{ cart.total_price | money_with_currency }}</p>
          </div>

          <small class="tax-note caption-large rte cart-drawer-tax-note">
            {%- if cart.duties_included and cart.taxes_included -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.duties_and_taxes_included_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.duties_and_taxes_included_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included == false and cart.taxes_included -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.taxes_included_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.taxes_included_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included and cart.taxes_included == false -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included == false and cart.taxes_included == false -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.taxes_at_checkout_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- endif -%}
          </small>
        </div>

        <!-- CTAs -->

        <div class="cart__ctas cart-drawer-btn" {{ block.shopify_attributes }}>
          <button
            type="submit"
            id="CartDrawer-Checkout"
            class="cart__checkout-button button"
            name="checkout"
            form="CartDrawer-Form"
            {% if cart == empty %}
              disabled
            {% endif %}
          >
            {{ 'sections.cart.checkout' | t }}
          </button>
          <div class="cart-drawer-continue-btn">
            <a href="{{ routes.all_products_collection_url }}" class="button cart__checkout-button">
              {{ 'general.continue_shopping' | t }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</cart-drawer>

<script>
    document.addEventListener('DOMContentLoaded', function () {
      const giftWrapVariantId = 41418287775787;

      function syncGiftCheckbox() {
        fetch('/cart.js')
          .then(res => res.json())
          .then(cart => {
            const item = cart.items.find(i => i.variant_id === giftWrapVariantId);
          const checkbox = document.querySelector('#gift-wrap-checkbox');
  if (checkbox) {
    checkbox.checked = !!item;
    checkbox.disabled = cart.items.length === 0; // Disable when cart is empty
  }

          });
      }

      function updateCartAttribute(attributeName, value) {
        fetch('/cart/update.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            attributes: {
              [attributeName]: value
            }
          })
        });
      }

      function refreshCartDrawer() {
        fetch(window.location.pathname, {
          headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
          .then(r => r.text())
          .then(html => {
            const doc = new DOMParser().parseFromString(html, 'text/html');
            const newDrawer = doc.querySelector('cart-drawer');
            const oldDrawer = document.querySelector('cart-drawer');
            if (newDrawer && oldDrawer) {
              oldDrawer.innerHTML = newDrawer.innerHTML;
              syncGiftCheckbox();
              initDrawerEvents();
              updateGridLayout(); // update layout after drawer refresh
            }
          });
      }

      function toggleSection(id) {
        const section = document.getElementById(id);
        const isVisible = section && section.style.display === 'block';
        document.querySelectorAll('.drawer-input-section').forEach(sec => sec.style.display = 'none');
        if (!isVisible && section) section.style.display = 'block';
      }

      function initDrawerEvents() {
        const giftCodeBtn = document.getElementById('gift-code-btn');
        const orderNoteBtn = document.getElementById('order-note-btn');
        const shippingBtn = document.getElementById('shipping-btn');
        const giftCodeInput = document.getElementById('gift_code');
        const orderNoteInput = document.getElementById('order_note');

        if (giftCodeBtn) giftCodeBtn.addEventListener('click', () => toggleSection('gift-code-section'));
        if (orderNoteBtn) orderNoteBtn.addEventListener('click', () => toggleSection('order-note-section'));
        if (shippingBtn) shippingBtn.addEventListener('click', () => toggleSection('shipping-section'));

        if (giftCodeInput) {
          giftCodeInput.addEventListener('input', function () {
            updateCartAttribute('gift_code', giftCodeInput.value);
          });
        }

        if (orderNoteInput) {
          orderNoteInput.addEventListener('input', function () {
            updateCartAttribute('order_note', orderNoteInput.value);
          });
        }
      }

      document.body.addEventListener('change', function (e) {
        if (e.target && e.target.id === 'gift-wrap-checkbox') {
          const checkbox = e.target;
          if (checkbox.checked) {
            fetch('/cart/add.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ id: giftWrapVariantId, quantity: 1 })
            }).then(() => refreshCartDrawer());
          } else {
            fetch('/cart.js')
              .then(res => res.json())
              .then(cart => {
                const giftItem = cart.items.find(i => i.variant_id === giftWrapVariantId);
                if (giftItem) {
                  fetch('/cart/change.js', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id: giftItem.key, quantity: 0 })
                  }).then(() => refreshCartDrawer());
                }
              });
          }
        }
      });

      // ====== Layout Control + Empty Message ======
      function updateGridLayout() {
        const grid = document.querySelector('.abccc .cart-drawer__recommendations .grid');
        const recommendations = document.querySelector('.abccc .cart-drawer__recommendations');
        const cartItems = document.querySelector('.cart-drawer-items');
        const emptyMessage = document.querySelector('#empty-cart-message');

        fetch('/cart.js')
          .then(res => res.json())
          .then(cart => {
            if (!grid || !recommendations) return;

            if (cart.items.length > 0) {
              grid.style.flexWrap = 'nowrap';
              recommendations.style.padding = '0';
              if (cartItems) cartItems.style.display = 'block';
              if (emptyMessage) emptyMessage.style.display = 'none';
            } else {
              grid.style.flexWrap = 'wrap';
              recommendations.style.padding = '50px';
              if (cartItems) cartItems.style.display = 'none';
              if (emptyMessage) emptyMessage.style.display = 'flex';
            }
          });
      }

      // Initial check
      updateGridLayout();

      const drawerTarget = document.querySelector('cart-drawer') || document.querySelector('.cart-drawer');
      if (drawerTarget) {
        const observer = new MutationObserver(() => {
          updateGridLayout();
        });
        observer.observe(drawerTarget, {
          childList: true,
          subtree: true
        });
      }

      document.body.addEventListener('click', function (e) {
        if (e.target.closest('.cart-drawer__remove-item')) {
          setTimeout(updateGridLayout, 500);
        }
      });

      document.addEventListener('cart:updated', updateGridLayout);

      syncGiftCheckbox();
      initDrawerEvents();
    });
</script>
