{% schema %}
{
  "name": "Image with Text Row",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Gentle & Effective Cleanser"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Our foaming cleanser is crafted with nourishing ingredients to leave your skin refreshed, hydrated, and glowing."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with Text Row",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="image-text-row page-width">
  {% if section.settings.image != blank %}
    <div class="image-container">
      <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.heading | escape }}">
    </div>
  {% endif %}

  <div class="text-container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p>{{ section.settings.text }}</p>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="custom-button">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</div>

<style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;500&display=swap');

        .image-text-row {
          display: flex;
          width:100%;
          align-items: center;
          justify-content: space-between;
          gap: 4rem;
              padding: 5rem 5rem 5rem 4rem;
          /* max-width: 1200px; */
          margin: 0 auto;
          /* flex-wrap: wrap; */
        }

        .image-container img {
          width: 100%;
          max-width: 654px;
          height: auto;
          object-fit: cover;
        }

        .text-container {
          flex: 1;
          max-width: 525px;
        }
    .image-container {
        flex: 1;
    }
        .text-container h2 {
          font-family: 'Inter', sans-serif;
          font-weight: 500;
          font-size: 54px;
          line-height: 100%;
          letter-spacing: -3px;
          margin-bottom: 1rem;
        }

        .text-container p {
          font-family: 'Inter', sans-serif;
          font-weight: 300;
          font-size: 22.5px;
          line-height: 136%;
          letter-spacing: 0;
          margin-bottom: 1.5rem;
        }

        .custom-button {
          font-family: 'Inter', sans-serif;
          padding: 0.75rem 1.5rem;
          background-color: #fff;
          color: #000;
          border: 2px solid #000;
          text-decoration: none;
          font-size: 22px;
          transition: all 0.3s ease;
          display: inline-block;
        }

        .custom-button:hover {
          background-color: #000;
          color: #fff;
          border: 2px solid #fff;
        }
          @media screen and (max-width: 480px) {
         .text-container h2{font-family: Inter;
      font-weight: 500;
