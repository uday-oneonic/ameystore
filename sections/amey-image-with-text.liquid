{% schema %}
{
  "name": "Product CTA Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Product CTA Banner"
    }
  ]
}
{% endschema %}

<div class="cta-banner-wrapper">
  <div class="cta-banner-content">
    {% if section.settings.banner_image %}
      <div class="cta-image-wrapper">
        <img
          src="{{ section.settings.banner_image | image_url: width: 654, height: 654, crop: 'center' }}"
          alt="Banner Image"
          class="cta-image"
          width="654"
          height="654"
        >
      </div>
    {% endif %}

    <div class="cta-text-group">
      <h2 class="cta-title">
        Which product<br>
        actually work for you?
      </h2>
      <p class="cta-paragraph">
        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's
        standard dummy text ever since the 1500s.
      </p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="cta-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .cta-banner-wrapper {
    padding: 60px 20px;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  .cta-banner-content {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    gap: 60px;
    max-width: 1200px;
    width: 100%;
    flex-direction: row;
  }

  .cta-image-wrapper {
    flex-shrink: 0;
    width: 654px;
    height: 654px;
  }

  .cta-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  .cta-text-group {
    flex: 1;
    min-width: 0; /* prevent overflow */
  }

  .cta-title {
    font-family: Inter, sans-serif;
    font-weight: 500;
    font-size: 54px;
    line-height: 100%;
    letter-spacing: -3%;
    margin-bottom: 20px;
    color: #000;
    word-wrap: break-word;
  }

  .cta-paragraph {
    font-family: Inter, sans-serif;
    font-weight: 300;
    font-size: 22.5px;
    line-height: 136%;
    letter-spacing: 0%;
    margin-bottom: 30px;
    color: #000;
    word-wrap: break-word;
  }

  .cta-button {
    display: inline-block;
    padding: 12px 28px;
    font-family: Inter, sans-serif;
    font-weight: 600;
    font-size: 22px;
    line-height: 100%;
    letter-spacing: 0%;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  .cta-button:hover {
    background-color: #333;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 1024px) {
    .cta-banner-content {
      flex-wrap: wrap;
      justify-content: center;
      text-align: center;
    }

    .cta-image-wrapper {
      width: 100%;
      height: auto;
      max-width: 654px;
    }

    .cta-text-group {
      max-width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    .cta-title {
      font-size: 38px;
    }

    .cta-paragraph {
      font-size: 18px;
    }

    .cta-button {
      font-size: 18px;
    }
  }
</style>
