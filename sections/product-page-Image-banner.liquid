{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Into the Cosmetics"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "We design durable travel apparel with a conscience â€” 100% made in America."
    },
    {
      "type": "text",
      "id": "product_text",
      "label": "Product Text",
      "default": "Products by "
    },
    {
      "type": "url",
      "id": "product_link",
      "label": "Product Link"
    },
    {
      "type": "text",
      "id": "video_text",
      "label": "Video Text",
      "default": "Video by "
    },
    {
      "type": "url",
      "id": "video_link",
      "label": "Video Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}

<section class="hero-section page-width">
  <div
    class="hero-background"
    style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"
  >
    <div class="hero-content">
      <h1>{{ section.settings.heading }}</h1>
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
  <div class="hero-text">
    <p>{{ section.settings.description }}</p>
    <p>
      {{ section.settings.product_text }}
      {% if section.settings.product_link != blank %}
        <a href="{{ section.settings.product_link }}">United By Blue</a>
      {% endif %}
      .
      {{ section.settings.video_text }}
      {% if section.settings.video_link != blank %}
        <a href="{{ section.settings.video_link }}">Seth Morrisey</a>
      {% endif %}
      .
    </p>
  </div>
</section>

