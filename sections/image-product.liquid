{% schema %}
{
  "name": "Shop the Look Split",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading",
      "default": "Shop the look"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Shop the Look"
    }
  ]
}
{% endschema %}

<div class="shop-look-wrapper page-width">
  {% if section.settings.section_heading != blank %}
    <h2 class="shop-look-heading">{{ section.settings.section_heading }}</h2>
  {% endif %}

  <div class="shop-look-grid">
    <div class="shop-look-left">
      {% if section.settings.left_image %}
        <img src="{{ section.settings.left_image | image_url: width: 1200 }}" alt="Look Image">
      {% endif %}
    </div>
    <div class="shop-look-right">
      {% if section.settings.product %}
        {% assign product = all_products[section.settings.product] %}
        <div class="shop-look-product">
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
          <div class="product-info">
            <p class="product-title">{{ product.title }}</p>
            <p class="product-vendor">{{ product.vendor }}</p>
            <p class="product-price">{{ product.price | money }}</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
                .shop-look-wrapper {
                  padding: 40px 30px;
                  background: white;
                }

                .shop-look-heading {
                  text-align: left;
                 font-family: Inter;
              font-weight: 400;
              font-size: 39px;
              line-height: 100%;
              letter-spacing: -3%;

                  margin-bottom: 20px;
                  color: #000;
                }

                .shop-look-grid {
                  display: flex;
                  flex-wrap: wrap;
                  align-items: center;
                  gap: 40px;
                }

                .shop-look-left {
                  flex: 2;
                  min-width: 300px;
                }

                .shop-look-left img {
                  width: 100%;
                  height: auto;
                  border-radius: 8px;
                }

                .shop-look-right {
                  /* flex: 1; */
                  display: flex;
                  justify-content: center;
                }

                .shop-look-product {
                  text-align: center;
                  max-width: 300px;
                }

                .shop-look-product img {
                  width: 100%;
                  margin-bottom: 10px;
                }

                .product-info {
                  text-align: start;
                }

                .product-title {
                  margin: 4px 0;
                  color: #000;
                  font-family: Inter;
            font-weight: 500;
            font-size: 20.04px;
            line-height: 100%;
            letter-spacing: 0;

                }

                .product-vendor {
             font-family: Inter;
          font-weight: 400;
          font-size: 16.22px;
          line-height: 100%;
          letter-spacing: 0;
                color: #7C7C7C;

                }

                .product-price {
                  font-family: Inter;
        font-weight: 700;
        font-size: 20.04px;
        line-height: 100%;
        letter-spacing: 0;

                }

                /* Responsive */
                @media screen and (max-width: 776px) {
                  .shop-look-grid {
                    flex-direction: column;
                  }

                  .shop-look-left,
                  .shop-look-right {
                    width: 100%;
                    max-width: 100%;
                  }

                  .shop-look-product {
                    margin-top: 20px;
                  }
                }
         @media screen and (max-width: 480px) {
           .shop-look-wrapper {
          padding: 40px 20px;
      }
           .shop-look-heading {
             font-size:20px;
           }
           .product-price {
        font-size: 10.24px;

                }
           .product-vendor {
      font-size:8.28px;
                }
           .product-title {
            font-size: 10.24px;

                }
           .shop-look-grid {
             gap:0;
           }

    .shop-look-product {
        max-width: 156px;
    }
           .shop-look-product img {
      margin-bottom: 0;
  }
         }
</style>
