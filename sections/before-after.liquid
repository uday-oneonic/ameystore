      <img
        src="{{ section.settings.image | image_url }}"
        alt="Before Image"
        class="image-before slider-images"
        alt="color photo"
      >

      <!-- src="https://cdn.shopify.com/s/files/1/0597/5192/3755/files/before-after-image.png?v=1743155264" -->

      <!-- > -->
      <!-- <img -->
      <img
