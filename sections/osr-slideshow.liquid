{% style %}
  .osr-slideshow {
    background: linear-gradient(180.12deg, rgba(69, 0, 132, 1) 15.25%, rgba(238, 243, 248, 1) 97.82%);
  }

  /* slideshow css start */

  .osr-slideshow-slide {
    padding-top: 150px;
  }

  .osr-slideshow-slide .page-width {
    max-width: calc(var(--page-width) - 10rem);
    margin: 0 auto;
  }

  .osr-slideshow {
    overflow: hidden;
  }

  .osr-slideshow-flex {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }

  .osr-slideshow-column {
    width: calc(50% - 20px);
  }

  .osr-slideshow-review-star {
    color: #004f95;
    font-size: 24px;
    display: flex;
  }

  .osr-slideshow-review-ratings {
    font-size: 16px;
    line-height: 26px;
    font-weight: bold;
  }

  .osr-slideshow-review {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .osr-slideshow-title {
    margin: 0;
    padding-bottom: 20px;
    position: relative;
  }

  .osr-slideshow-title:before {
    content: '';
    background: url('https://cdn.shopify.com/s/files/1/0524/4239/8896/files/slideshow-title-star.webp?v=1740141356');
    width: 50px;
    height: 50px;
    display: block;
    background-repeat: no-repeat;
    background-size: contain;
    position: absolute;
    right: 12rem;
    top: -5rem;
  }

  .osr-slideshow-subtitle {
    margin: 0;
    padding-bottom: 20px;
  }

  .osr-slideshow-btn-wrap {
    display: flex;
    align-items: center;
    margin: 20px 0;
    gap: 20px;
  }

  .osr-slideshow-logo-img {
    width: 100%;
    max-width: 80px;
  }

  .osr-slideshow-logo-wrap {
    display: flex;
    align-items: baseline;
    gap: 8rem;
    justify-content: flex-start;
  }

  .osr-slideshow-logo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .osr-slideshow-logo-title {
    font-size: 16px;
    line-height: 26px;
    display: block;
    padding-top: 10px;
  }

  .osr-slideshow-img {
    width: 100%;
  }

  .osr-slideshow-column.osr-slideshow-right-column {
    font-size: 0;
    min-height: 640px;
  }

  .osr-slideshow-section {
    border-bottom: 2px solid #000000;
  }

  @media only screen and (max-width: 1024px) {
    .osr-slideshow-column.osr-slideshow-right-column {
      font-size: 0;
      min-height: 550px;
    }

    .osr-slideshow-title:before {
      right: 0;
    }

    .osr-slideshow-logo-wrap {
      gap: 5rem;
    }
  }

  @media only screen and (max-width: 991px) {
    .osr-slideshow-logo-wrap {
      gap: 1rem;
    }
  }

  @media only screen and (max-width: 767px) {
    .osr-slideshow-slide {
      padding-top: 120px;
    }

    .osr-slideshow-column {
      width: calc(100% - 0px);
    }

    .osr-slideshow-column.osr-slideshow-right-column {
      min-height: auto;
    }

    .osr-slideshow-review {
      justify-content: center;
    }

    .osr-slideshow-title {
      text-align: center;
    }

    .osr-slideshow-subtitle {
      text-align: center;
    }

    .osr-slideshow-logo-wrap {
      justify-content: center;
    }

    .osr-slideshow-btn-wrap {
      justify-content: center;
    }

    .osr-slideshow-title:before {
      right: 0;
      width: 30px;
      height: 30px;
      top: -4rem;
    }

    .osr-slideshow-logo {
      max-width: 100px;
    }
  }

  /* slideshow css end */
{% endstyle %}

<section class="osr-section osr-slideshow-section" id="{{ section.id }}">
  <div class="osr-page-width">
    <div class="osr-slideshow">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide">
            <div class="osr-slideshow-slide osr-slideshow-slide-{{ forloop.index }} color-{{ block.settings.color_scheme }} gradient">
              <div class="page-width">
                <div class="osr-slideshow-flex">
                  <div class="osr-slideshow-column osr-slideshow-left-column">
                    {% if block.settings.review_text != blank %}
                      <span class="osr-slideshow-review">
