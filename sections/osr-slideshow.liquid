                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"></path></g>
                          </svg>
                          <svg
                            fill="#004F95"
                            width="22px"
                            height="22px"
                            viewBox="0 0 32 32"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"></path></g>
                          </svg>
                          <svg
                            fill="#004F95"
                            width="22px"
                            height="22px"
                            viewBox="0 0 32 32"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"></path></g>
                          </svg>
                          <svg
                            fill="#004F95"
                            width="22px"
                            height="22px"
                            viewBox="0 0 32 32"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"></path></g>
                          </svg>
                          <svg
                            fill="#004F95"
                            width="22px"
                            height="22px"
                            viewBox="0 0 32 32"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"></path></g>
                          </svg>
                        </span>
                        <span class="osr-slideshow-review-ratings">{{ block.settings.review_text }}</span>
                      </span>
                    {% endif %}
                    {% if block.settings.heading != blank %}
                      <h2 class="osr-slideshow-title osr-font-72">{{ block.settings.heading }}</h2>
                    {% endif %}
                    {% if block.settings.subheading != blank %}
                      <h3 class="osr-slideshow-subtitle osr-font-22">{{ block.settings.subheading }}</h3>
                    {% endif %}
                    <div class="osr-slideshow-logo-wrap">
                      {% if block.settings.logo_image_1 != blank %}
                        <div class="osr-slideshow-logo">
                          <img
                            src="{{ block.settings.logo_image_1 | image_url }}"
                            alt="{{ block.settings.logo_text_1 }}"
                            class="osr-slideshow-logo-img"
                            width=""
                            height=""
                            loading="lazy"
                          >
                          <span class="osr-slideshow-logo-title">{{ block.settings.logo_text_1 }}</span>
                        </div>
                      {% endif %}
                      {% if block.settings.logo_image_2 != blank %}
                        <div class="osr-slideshow-logo">
                          <img
                            src="{{block.settings.logo_image_2 | image_url }}"
                            alt="{{ block.settings.logo_text_2 }}"
                            class="osr-slideshow-logo-img"
                            width=""
                            height=""
                            loading="lazy"
                          >
                          <span class="osr-slideshow-logo-title">{{ block.settings.logo_text_2 }}</span>
                        </div>
                      {% endif %}
                      {% if block.settings.logo_image_3 != blank %}
                        <div class="osr-slideshow-logo">
                          <img
                            src="{{ block.settings.logo_image_3 | image_url }}"
                            alt="{{ block.settings.logo_text_3 }}"
                            class="osr-slideshow-logo-img"
                            width=""
                            height=""
                            loading="lazy"
                          >
                          <span class="osr-slideshow-logo-title">{{ block.settings.logo_text_3 }}</span>
                        </div>
                      {% endif %}
                    </div>
                    <div class="osr-slideshow-btn-wrap">
                      {% if block.settings.btn_label_1 != blank %}
                        <a href="{{ block.settings.btn_link_1 }}" class="osr-slideshow-btn osr-primary-btn">
                          {{- block.settings.btn_label_1 -}}
                        </a>
                      {% endif %}
                      {% if block.settings.btn_label_2 != blank %}
                        <a href="{{ block.settings.btn_link_2 }}" class="osr-slideshow-btn osr-sub-primary-btn">
                          {{- block.settings.btn_label_2 -}}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                  <div class="osr-slideshow-column osr-slideshow-right-column">
                    {% if block.settings.image != blank %}
                      <img
                        src="{{ block.settings.image | image_url }}"
                        alt="{{ block.settings.image.alt }}"
                        class="osr-slideshow-img"
                        width=""
                        height=""
                        loading="eager"
                      >
                    {% else %}
                      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<script>
  /* slideshow js start */

  var slideshow = new Swiper('.osr-slideshow', {
    slidesPerView: 1,
    spaceBetween: 20,
    speed: 2000,
    effect: 'fade',
    autoplay: {
      delay: 2000,
    },
    loop: true,
  });

  /* slideshow js end */
</script>

