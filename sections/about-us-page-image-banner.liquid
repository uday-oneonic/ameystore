{% schema %}
{
  "name": "About-Us-Image-Banner",
  "tag": "section",
  "class": "about-us-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Midlands Trashion Show's stunning repurposed Cosmetics"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us Page Image Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% style %}
      .about-us-banner {
        position: relative;
        width: 100%;
        height: 300px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: {{ section.settings.text_alignment }};
        color: white;
      }

      .about-us-banner::after {
        content: "";
        position: absolute;
        inset: 0;
        /* background: rgba(0, 0, 0, 0.3); /* Optional: adds overlay for better text contrast */ */
      }

      .about-us-banner-content {
        position: relative;
        z-index: 1;
      }

      .about-us-banner h1 {
        font-family: Inter;
    font-weight: 600;
    font-size: 74px;
    line-height: 100%;
    letter-spacing: 0;
        color:white;
        margin: 0;
      }

      .about-us-banner p {
      font-family: Inter;
  font-weight: 400;
  font-size: 23px;
  line-height: 100%;
  letter-spacing: 0;
        margin-top: 10px;
      }
{% endstyle %}

<div
  class="about-us-banner"
  style="background-image: url({{ section.settings.background_image | image_url: width: 1500 }});"
>
  <div class="about-us-banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
  </div>
</div>
